using System.Xml.Linq;
using System;
using System.Net.Sockets;
using System.Security.Cryptography;
using System.Runtime.ExceptionServices;

class Person
{
    string Name;
    string Surname;
    string Patronymic;
    string Address;
    long Phonenumber;
    long Creditcardnumber;
    long Bankaccountnumber;
    public Person(string N, string S, string P, long Ph, string A, long Cn, long Bn)
    {
        Name = N;
        Surname = S;
        Patronymic = P;
        Phonenumber = Ph;
        Address = A;
        Creditcardnumber = Cn;
        Bankaccountnumber = Bn;
    }
    public string getName()
    {
        return Name;
    }
    public long getCreditcardnumber()
    {
        return Creditcardnumber;
    }
    public long getPhonenumber()
    {
        return Phonenumber;
    }
    public long getBankaccountnumber()
    {
        return Bankaccountnumber;
    }
    public string getAddress()
    {
        return Address;
    }
    public string info()
    {
        return String.Format("{0} {1} {2} \nНомер кредитной карты:{3}",
        Name, Patronymic, Surname, Creditcardnumber);
    }
}

class Program
{
    static void Main()
    {
        Person BobkovVD = new Person("Vlad", "Bobkov", "Dmitrievich", 89999999999, "SpB", 1234567890, 223456);
        Person IvanovII = new Person("Ivan", "Ivanov", "Ivanovich", 88888888888, "Ufa", 1234567890, 223456);
        Person DergachevVV = new Person("Vadim", "Dergachev", "Vadimovich", 87777777777, "Moscow", 1234567890, 223456);
        Console.WriteLine("Напишите фамилию и инициалы человека для отображения информации");
        string Name = Console.ReadLine();       
        switch (Name)
        {
            case "DergachevVV":
                Console.WriteLine("Напишите, что именно вы хотите узнать\nСписок команд:\nНомер кредитной карты\nГород проживания\nНомер банковского счета\nНомер телефона\nВся информация");
                string Commands1 = Console.ReadLine();
                switch (Commands1)
                {
                    case "Номер кредитной карты":
                        Console.WriteLine(DergachevVV.getCreditcardnumber());
                        break;
                    case "Город проживания":
                        Console.WriteLine(DergachevVV.getAddress());
                        break;
                    case "Номер банковского счета":
                        Console.WriteLine(DergachevVV.getBankaccountnumber());
                        break;
                    case "Номер телефона":
                        Console.WriteLine(DergachevVV.getPhonenumber());
                        break;
                    case "Вся информация":
                        Console.WriteLine(DergachevVV.info());
                        break;
                }
                break;
            case "BobkovVD":
                Console.WriteLine("Напишите, что именно вы хотите узнать\nСписок команд:\nНомер кредитной карты\nГород проживания\nНомер банковского счета\nНомер телефона\nВся информация");
                string Commands2 = Console.ReadLine();
                switch (Commands2)
                {
                    case "Номер кредитной карты":
                        Console.WriteLine(BobkovVD.getCreditcardnumber());
                        break;
                    case "Город проживания":
                        Console.WriteLine(BobkovVD.getAddress());
                        break;
                    case "Номер банковского счета":
                        Console.WriteLine(BobkovVD.getBankaccountnumber());
                        break;
                    case "Номер телефона":
                        Console.WriteLine(BobkovVD.getPhonenumber());
                        break;
                    case "Вся информация":
                        Console.WriteLine(BobkovVD.info());
                        break;
                }
                break;
            case "IvanovII":
                Console.WriteLine("Напишите, что именно вы хотите узнать\nСписок команд:\nНомер кредитной карты\nГород проживания\nНомер банковского счета\nНомер телефона\nВся информация");
                string Commands3 = Console.ReadLine();
                switch (Commands3)
                {
                    case "Номер кредитной карты":
                        Console.WriteLine(IvanovII.getCreditcardnumber());
                        break;
                    case "Город проживания":
                        Console.WriteLine(IvanovII.getAddress());
                        break;
                    case "Номер банковского счета":
                        Console.WriteLine(IvanovII.getBankaccountnumber());
                        break;
                    case "Номер телефона":
                        Console.WriteLine(IvanovII.getPhonenumber());
                        break;
                    case "Вся информация":
                        Console.WriteLine(IvanovII.info());
                        break;
                }
                break;
            default:
                Console.WriteLine("В базе нет такого человека");
                break;
        }
    }
}
